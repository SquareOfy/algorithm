package com.ssafy.ws.step4;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

/**
 * 리뷰리스트를 배열을 리스트로 변경
 */
public class ReviewManagerImpl implements IReviewManager{
	List<Review> reviews = new ArrayList<>();
	
	@Override
	public void addReview(Review review) {
		this.reviews.add(review);
		
	}

	@Override
	public void removeReview(int reviewId) {
		for(int i =0; i<this.reviews.size(); i++) {
			if(this.reviews.get(i).reviewId == reviewId) {
				reviews.remove(i);
			}
		}
	}

	@Override
	public List<Review> getRivewList() {
		return reviews;
	}

	@Override
	public Review searchByreviewId(int reviewId) {
		for(int i=0; i<this.reviews.size(); i++) {
			if(this.reviews.get(i).reviewId== reviewId) {
			return this.reviews.get(i);
			}
		}
		return null;
	}

	@Override
	public List<Review> getRestaurantReview(int resId) {
		
		return null;
	}
	//코드를 작성해주세요. 
}
