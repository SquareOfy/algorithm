package com.ssafy.ws.step4;

import java.util.Arrays;
import java.util.List;

/**
 * 맛집리스트를 배열로 유지하며 관리하는 클래스
 */
public class RestaurantManagerImpl implements IRestaurantManager{
	private static int MAX_RESTAURANT_SIZE = 100;
	private Restaurant[] restaurants = new Restaurant[MAX_RESTAURANT_SIZE];
	private int restaurantSize;
	
	private RestaurantManagerImpl() {}
	private static RestaurantManagerImpl instance = new RestaurantManagerImpl();
	public IRestaurantManager getInstance() {
		return instance;
	}
	
	
	
	@Override
	public void addRestaurant(Restaurant restaurant) {
		restaurants[restaurantSize++] = restaurant;
		
	}

	@Override
	public void removeRestaurant(int resid) {
		for(int i=0; i<this.restaurantSize; i++) {
			if(restaurants[i].getResId() == resid) {
//				List<Restaurant> removedList = new ArrayList<>(Arrays.asList(restaurants));
//				removedList.remove(i);
//				restaurants = removedList.toArray(new int[MAX_RESTAURANT_SIZE]);
				this.restaurants[i] = null;
				for(int j=i; i<this.restaurantSize-1; i++) {
					this.restaurants[i] = this.restaurants[i+1];
				}
			}
		}
		
	}

	@Override
	//한식과 한식이 아닌 모든 레스토랑 배열 출력하기
	public Restaurant[] getRestaurantList() {
		return this.restaurants;
	}

	@Override
	public Restaurant searchByresid(int resid) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public KoreanRestaurant[] getkoreanRestaurants() {
		int cnt = 0;
		for(int i=0; i<this.restaurantSize; i++) {
			if (this.restaurants[i].getClass() == KoreanRestaurant.class){
				cnt ++;
			}
		}
		KoreanRestaurant[] results = new KoreanRestaurant[cnt];
		int idx =0;
		for(int i=0; i<this.restaurantSize; i++) {
			if (this.restaurants[i].getClass() == KoreanRestaurant.class){
					results[idx++] = (KoreanRestaurant) this.restaurants[i];
			}	
		}
		return results;
		}



	@Override
	public Restaurant[] getNonKoreanRestaurants() {
		// TODO Auto-generated method stub
		return null;
	}
}
	

